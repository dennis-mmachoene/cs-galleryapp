@model IEnumerable<GalleryApp.Models.Picture>
@{
    ViewData["Title"] = "Gallery Feed";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gallery Feed</h2>
    <a asp-action="Upload" class="btn btn-primary">Upload Picture</a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var picture in Model)
        {
            <div class="col-md-4 mb-4">
                <img src="~/Uploads/@picture.FileName" class="card-img-top" alt="User Picture"
                    style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h6 class="card-title">@picture.User.Username</h6>
                    @if (!string.IsNullOrEmpty(picture.Description))
                    {
                        <p class="card-text">@picture.Description</p>
                    }
                    <small class="text-muted">@picture.UploadedAt.ToString("MMM dd, yyyy")</small>
                    @if (picture.UserId == int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value))
                    {
                     <form asp-action="DeletePicture" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@picture.Id" />
                        <button type="submit" class="btn btn-sm btn-danger mt-2" onclick="return confirm('Are you sure?')">Delete</button>
                     </form>
                    }
                </div>
            </div>
        }
    </div>
}else{
    <div class="text-center">
        <p>No pictures yet. <a asp-action="Upload">Upload the first one!</a></p>
    </div>
}