@model GalleryApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<form asp-action="Register" method="post">
    @Html.AntiForgeryToken() 
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group mb-3">
        <label asp-for="Username" class="control-label"></label>
        <input type="text" asp-for="Username" class="form-control" />
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>

    <div class="form-group mb-3"></div>
        <label asp-for="Email" class="control-label"></label>
        <input type="text" asp-for="Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group mb-3"></div>
        <label asp-for="Password" class="control-label"></label>
        <input type="text" asp-for="Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group mb-3"></div>
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input type="text" asp-for="ConfirmPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Register" class="btn btn-primary">
        <br>Already have asp-action account? <a asp-action="Login" class="btn btn-link">Login</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}